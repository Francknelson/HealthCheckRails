<h1><%= User.model_name.human %></h1>

<div class="row">
  <div class="col-3"><%= User.human_attribute_name :name %></div>
  <div class="col-9"><%= @user.name %></div>
  <div class="col-3"><%= User.human_attribute_name :last_name %></div>
  <div class="col-9"><%= @user.last_name %></div>
  <div class="col-3"><%= User.human_attribute_name :phone %></div>
  <div class="col-9"><%= @user.phone %></div>
  <div class="col-3"><%= User.human_attribute_name :email %></div>
  <div class="col-9"><%= @user.email %></div>
  <div class="col-3"><%= User.human_attribute_name :addresses %></div>
  <div class="col-9">
    <%= link_to "Novo endereÃ§o", new_user_address_path(@current_user), class: "btn btn-primary " %>

    <% @user.addresses.each do |address| %>
      <%= render "user_location", address: address, user: @current_user %>
      <%= link_to "Editar", edit_user_address_path(@current_user, address), class: "btn btn-primary"  %>
      <%= link_to "Deletar", user_address_path(@current_user, address), class: "btn btn-danger", method: :delete %>
    <% end %>
  </div>
</div>

<div class="page-actions">
  <%= link_to "Editar", edit_user_path(@user), class: "btn btn-primary" %>
  <%= link_to "Deletar", user_path(@user), class: "btn btn-danger", method: :delete %>
  <%= link_to "Voltar", users_path, class: "btn btn-secondary" %>
</div>
