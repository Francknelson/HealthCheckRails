<div class="row">
  <div class="col-md-8">
    <h1><%= Person.model_name.human count: 2 %></h1>

    <p><%= t ".people_count_html", count: @people.size %></p>
  </div>

  <div class="col-md-4 text-md-right d-print-none">
    <%= link_to "Novo usuÃ¡rio", new_person_path, class: "btn btn-primary" %>
  </div>
</div>


<% if @people.any? %>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= Person.human_attribute_name :email %></th>
      <th><%= Person.human_attribute_name :user %></th>
      <th><%= Person.human_attribute_name :name %></th>
      <th><%= Person.human_attribute_name :last_name %></th>
      <th><%= Person.human_attribute_name :cpf %></th>
      <th> <%= t "actions" %> </th>
    </tr>
    </thead>

    <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.email %></td>
        <td><%= person.user %></td>
        <td><%= person.name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.cpf %></td>
        <td class="actions">
          <%= link_to person_path(person) do %> <i class="fa fa-circle-info me-2"></i> <% end %>
          <%= link_to edit_person_path(person) do %> <i class="fa-solid fa-pencil"></i> <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% else %>
  <p class="lead">
    <%= link_to new_person_path do %>
      <%= t "create_your_first_model", model_name: Person.model_name.human %>
    <% end %>
  </p>
<% end %>
