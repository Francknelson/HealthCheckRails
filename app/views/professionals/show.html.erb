<h1 class="text-center"><%= Professional.model_name.human %></h1>

<div class="row">
  <div class="col-3"><%= Professional.human_attribute_name :name %></div>
  <div class="col-9"><%= @professional.user.name %></div>
  <div class="col-3"><%= Professional.human_attribute_name :last_name %></div>
  <div class="col-9"><%= @professional.user.last_name %></div>
  <div class="col-3"><%= Professional.human_attribute_name :cnpj %></div>
  <div class="col-9"><%= @professional.cnpj %></div>
  <div class="col-3"><%= Professional.human_attribute_name :email %></div>
  <div class="col-9"><%= @professional.user.email %></div>
  <div class="col-3"><%= Professional.human_attribute_name :professional_record %></div>
  <div class="col-9"><%= @professional.professional_record %></div>
  <div class="col-3"><%= Professional.human_attribute_name :specialties %></div>
  <div class="col-9">
    <% @professional.specialties.each do |professional| %>
      <%= professional.description %>
    <% end %>
  </div>
  <div class="col-3"><%= Professional.human_attribute_name :addresses %></div>
  <div class="col-9">
    <% @professional.addresses.each do |address| %>
      <%= render "professional_location", address: address, professional: @professional %>
    <% end %>
  </div>
</div>

<div class="page-actions">
  <%= link_to "Editar", edit_professional_path(@professional), class: "btn btn-primary" %>
  <%= link_to "Deletar", professional_path(@professional), class: "btn btn-danger", method: :delete %>
  <%= link_to "Voltar", professionals_path, class: "btn btn-secondary" %>
</div>
