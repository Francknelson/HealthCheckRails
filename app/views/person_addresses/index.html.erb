<div class="row">
  <div class="col-md-8">
    <h1><%= PersonAddress.model_name.human count: 2 %></h1>

    <p><%= t ".person_adresseses_count_html", count: @person_addresses.size %></p>
  </div>

  <div class="col-md-4 text-md-right d-print-none">
    <%= link_to "Novo endereÃ§o", new_person_person_address_path(@person), class: "btn btn-primary" %>
  </div>
</div>


<% if @person_addresses.any? %>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= PersonAddress.human_attribute_name :zipcode %></th>
      <th><%= PersonAddress.human_attribute_name :street %></th>
      <th><%= PersonAddress.human_attribute_name :number %></th>
      <th><%= PersonAddress.human_attribute_name :neighborhood %></th>
      <th><%= PersonAddress.human_attribute_name :city %></th>
      <th><%= PersonAddress.human_attribute_name :state %></th>
      <th><%= PersonAddress.human_attribute_name :complement %></th>
      <th> <%= t "actions" %> </th>
    </tr>
    </thead>

    <tbody>
    <% @person_addresses.each do |address| %>
      <tr>
        <td><%= address.zipcode %></td>
        <td><%= address.street %></td>
        <td><%= address.number %></td>
        <td><%= address.neighborhood %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.complement %></td>
        <td class="actions">
          <%= link_to person_person_address_path(@person, address) do %> <i class="fa fa-circle-info me-2"></i> <% end %>
          <%= link_to edit_person_person_address_path(@person, address) do %> <i class="fa-solid fa-pencil"></i> <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% else %>
  <p class="lead">
    <%= link_to new_person_person_address_path(@person) do %>
      <%= t "create_your_first_model", model_name: PersonAddress.model_name.human %>
    <% end %>
  </p>
<% end %>
