<h1><%= PersonAddress.model_name.human %></h1>

<div class="row">
  <div class="col-3"><%= PersonAddress.human_attribute_name :zipcode %></div>
  <div class="col-9"><%= @person_address.zipcode %></div>
  <div class="col-3"><%= PersonAddress.human_attribute_name :street %></div>
  <div class="col-9"><%= @person_address.street %></div>
  <div class="col-3"><%= PersonAddress.human_attribute_name :number %></div>
  <div class="col-9"><%= @person_address.number %></div>
  <div class="col-3"><%= PersonAddress.human_attribute_name :neighborhood %></div>
  <div class="col-9"><%= @person_address.neighborhood %></div>
  <div class="col-3"><%= PersonAddress.human_attribute_name :city %></div>
  <div class="col-9"><%= @person_address.city %></div>
  <div class="col-3"><%= PersonAddress.human_attribute_name :state %></div>
  <div class="col-9"><%= @person_address.state %></div>
  <div class="col-3"><%= PersonAddress.human_attribute_name :complement %></div>
  <div class="col-9"><%= @person_address.complement %></div>
</div>

<div class="page-actions">
  <%= link_to "Editar", edit_person_person_address_path(@person, @person_address), class: "btn btn-primary" %>
  <%= link_to "Deletar", person_person_address_path(@person, @person_address), class: "btn btn-danger", method: :delete%>
  <%= link_to "Voltar", person_path(@person), class: "btn btn-secondary" %>
</div>