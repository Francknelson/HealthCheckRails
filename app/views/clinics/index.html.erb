<div class="row">
  <div class="col-md-8">
    <h1><%= Clinic.model_name.human count: 2 %></h1>

    <p><%= t ".clinics_count_html", count: @clinics.size %></p>
  </div>

  <div class="col-md-4 text-md-right d-print-none">
    <%= link_to "Nova clÃ­nica", new_clinic_path, class: "btn btn-primary" %>
  </div>
</div>

<h4>Encontre <%= Clinic.model_name.human count: 2 %> pela <%= Clinic.human_attribute_name :corporate_name %>:</h4>
  <%= form_tag(clinics_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag("Buscar") %>
  <% end %>

<% if @clinics.any? %>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= Clinic.human_attribute_name :corporate_name %></th>
      <th><%= Clinic.human_attribute_name :cnpj %></th>
      <th><%= Clinic.human_attribute_name :health_insurance %></th>
      <th><%= Clinic.human_attribute_name :specialties %></th>
      <th> <%= t "actions" %> </th>
    </tr>
    </thead>

    <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.corporate_name %></td>
        <td><%= clinic.cnpj %></td>
        <td><%= clinic.health_insurance %></td>
        <td><%= clinic.specialties.count %></td>
        <td class="actions">
          <%= link_to clinic_path(clinic) do %> <i class="fa fa-circle-info me-2"></i> <% end %>
          <%= link_to edit_clinic_path(clinic) do %> <i class="fa-solid fa-pencil"></i> <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% else %>
  <p class="lead">
    <%= link_to new_clinic_path do %>
      <%= t "create_your_first_model", model_name: Clinic.model_name.human %>
    <% end %>
  </p>
<% end %>
