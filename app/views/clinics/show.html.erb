<h1><%= Clinic.model_name.human %></h1>

<div class="row">
  <div class="col-3"><%= Clinic.human_attribute_name :corporate_name %></div>
  <div class="col-9"><%= @clinic.corporate_name %></div>
  <div class="col-3"><%= Clinic.human_attribute_name :cnpj %></div>
  <div class="col-9"><%= @clinic.cnpj %></div>
  <div class="col-3"><%= Clinic.human_attribute_name :health_insurance %></div>
  <div class="col-9"><%= @clinic.health_insurance %></div>
  <div class="col-3"><%= Clinic.human_attribute_name :specialty %></div>
  <div class="col-9"><%= @clinic.specialty.description%></div>
  <div class="col-3"><%= Clinic.human_attribute_name :addresses %></div>
  <div class="col-9">
    <%= link_to "Novo endereÃ§o", new_clinic_clinic_address_path(@clinic), class: "btn btn-primary " %>

    <% @clinic.clinic_addresses.each do |address| %>
      <%= render "clinic_location", address: address, clinic: @clinic %>
