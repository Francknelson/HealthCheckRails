<div class="row">
  <div class="col-md-8">
    <h1><%= Client.model_name.human count: 2 %></h1>

    <p><%= t ".clients_count_html", count: @clients.size %></p>
  </div>

  <div class="col-md-4 text-md-right d-print-none">
    <%= link_to "Novo paciente", new_client_path, class: "btn btn-primary" %>
  </div>
</div>

<h4>Encontre <%= Client.model_name.human count: 2 %>:</h4>
<%= form_tag(clients_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Buscar") %>
<% end %>

<% if @clients.any? %>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= Clinic.human_attribute_name :name %></th>
      <th><%= Clinic.human_attribute_name :last_name %></th>
      <th><%= Clinic.human_attribute_name :email %></th>
      <th><%= Clinic.human_attribute_name :cpf %></th>
      <th><%= Clinic.human_attribute_name :rg %></th>
      <th><%= Clinic.human_attribute_name :birth_date %></th>
      <th> <%= t "actions" %> </th>
    </tr>
    </thead>

    <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.user.name %></td>
        <td><%= client.user.last_name %></td>
        <td><%= client.user.email %></td>
        <td><%= client.cpf %></td>
        <td><%= client.rg %></td>
        <td><%= client.birth_date %></td>
        <td class="actions">
          <%= link_to client_path(client) do %> <i class="fa fa-circle-info me-2"></i> <% end %>
          <%= link_to edit_client_path(client) do %> <i class="fa-solid fa-pencil"></i> <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% else %>
  <p class="lead">
    <%= link_to new_client_path do %>
      <%= t "create_your_first_model", model_name: Client.model_name.human %>
    <% end %>
  </p>
<% end %>
