<h1 class="text-center"><%= Client.model_name.human %></h1>

<div class="row">
  <div class="col-3"><%= Client.human_attribute_name :name %></div>
  <div class="col-9"><%= @client.user.name %></div>
  <div class="col-3"><%= Client.human_attribute_name :last_name %></div>
  <div class="col-9"><%= @client.user.last_name %></div>
  <div class="col-3"><%= Client.human_attribute_name :email %></div>
  <div class="col-9"><%= @client.user.email %></div>
  <div class="col-3"><%= Client.human_attribute_name :cpf %></div>
  <div class="col-9"><%= @client.cpf %></div>
  <div class="col-3"><%= Client.human_attribute_name :rg %></div>
  <div class="col-9"><%= @client.rg %></div>
  <div class="col-3"><%= Client.human_attribute_name :birth_date %></div>
  <div class="col-9"><%= @client.birth_date %></div>
  <div class="col-3"><%= Client.human_attribute_name :addresses %></div>
  <div class="col-9">
    <% @client.addresses.each do |address| %>
      <%= render "client_location", address: address, client: @client %>
    <% end %>
  </div>
</div>

<div class="page-actions">
  <%= link_to "Editar", edit_client_path(@client), class: "btn btn-primary" %>
  <%= link_to "Deletar", client_path(@client), class: "btn btn-danger", method: :delete %>
  <%= link_to "Voltar", clients_path, class: "btn btn-secondary" %>
</div>
