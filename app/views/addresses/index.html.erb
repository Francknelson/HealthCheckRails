<div class="row">
  <div class="col-md-8">
    <h1><%= Address.model_name.human count: 2 %></h1>

    <p><%= t ".adresseses_count_html", count: @addresses.size %></p>
  </div>

  <div class="col-md-4 text-md-right d-print-none">
    <%= link_to "Novo endereÃ§o", new_user_address_path(@current_user), class: "btn btn-primary" %>
  </div>
</div>


<% if @addresses.any? %>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= Address.human_attribute_name :zipcode %></th>
      <th><%= Address.human_attribute_name :street %></th>
      <th><%= Address.human_attribute_name :number %></th>
      <th><%= Address.human_attribute_name :neighborhood %></th>
      <th><%= Address.human_attribute_name :city %></th>
      <th><%= Address.human_attribute_name :state %></th>
      <th><%= Address.human_attribute_name :complement %></th>
      <th> <%= t "actions" %> </th>
    </tr>
    </thead>

    <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.zipcode %></td>
        <td><%= address.street %></td>
        <td><%= address.number %></td>
        <td><%= address.neighborhood %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.complement %></td>
        <td class="actions">
          <%= link_to user_address_path(@current_user, address) do %> <i class="fa fa-circle-info me-2"></i> <% end %>
          <%= link_to edit_user_address_path(@current_user, address) do %> <i class="fa-solid fa-pencil"></i> <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% else %>
  <p class="lead">
    <%= link_to new_user_address_path(@current_user) do %>
      <%= t "create_your_first_model", model_name: Address.model_name.human %>
    <% end %>
  </p>
<% end %>
